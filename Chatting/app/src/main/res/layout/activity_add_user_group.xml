<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    tools:context=".UserGroupActivity">

    <EditText
        android:id="@+id/text_search_user"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:hint="Search"
        android:textSize="20dp"
        android:drawableLeft="@drawable/ic_search_black_24dp"
        android:background="@drawable/edit_text_background_radius"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/text_search_user">

    </android.support.v7.widget.RecyclerView>

    <EditText
        android:id="@+id/name_Group"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/recycler_view"
        android:hint="Name Group"
        android:textSize="20dp"
        android:paddingLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edit_text_background_radius"/>

    <Button
        android:id="@+id/buton_createGroup"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Creat Group"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/name_Group"
        android:background="@drawable/button_background_green"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>